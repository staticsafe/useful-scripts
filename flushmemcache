#!/bin/bash
#Small script to flush Memcached

#Check if memcached is running

LOLCACHE="memcached"

APPCHK=$(ps aux | grep -c memcached)

#Flushes the cache if memcached is running

if [ $APPCHK = "1" ];

then

echo "Memcached is not running!"

else

echo "flush_all" | nc -w 3 localhost 11211
echo "Memcached cache is flushed! :)"

fi

exit
